<section id="dosen" class="bg-white p-5 md:p-20 h-full mt-28 mb-28">
    <div class="mx-auto max-w-7xl px-4 lg:px-12">
        <h2 class="text-2xl font-bold mb-4 text-center">Daftar Dosen dan Mata Kuliah Kelas 01SIFP010</h2>
        <div class="bg-white relative shadow-md sm:rounded-lg overflow-hidden mt-10">
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-white">
                    <thead class="text-lg uppercase bg-cyan-900 text-white">
                        <tr>
                            <th scope="col" class="px-4 py-3">No</th>
                            <th scope="col" class="px-4 py-3">Nama Dosen</th>
                            <th scope="col" class="px-4 py-3">Mata Kuliah</th>
