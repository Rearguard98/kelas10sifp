---
import "../style/global.css";
import { Image } from "astro:assets"
import logounpam from "../../public/logo-unpam.png"; // Assuming this path is correct
import { navigationLinks } from "../components/navLinks";
---
<footer class="p-4 md:p-8 lg:p-10 bg-gray-800">
  <div class="mx-auto max-w-7xl text-center">
      <a href="/" class="flex justify-center items-center gap-5 text-2xl font-semibold text-white">
          <Image src={logounpam} 
          alt="Logo Unpam" 
          height="300"
          width="291"
          decoding="async"
          loading="lazy"
          fetchpriority="low"
          class="max-h-28 max-w-28"/>
          Kelas01SIFP010    
      </a>
      <p class="my-6 text-gray-400">Website Resmi Kelas 01SIFP010 Sistem Informasi UNPAM</p>
      <ul class="flex flex-wrap justify-center items-center mb-6 text-white">
          {navigationLinks.map((link) => (
            <li><a href={link.href} class="mr-4 hover:underline md:mr-6">{link.text}</a></li>
          ))}
      </ul>
      <span class="text-sm sm:text-center text-gray-400">&copy; 2025 <a href="/" class="hover:underline">Kelas01SIFP010</a>. All Rights Reserved.</span>
  </div>
</footer>